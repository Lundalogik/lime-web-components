{
	"name": "lime-web-component-interfaces",
	"version": "2.6.0",
	"description": "Lime web components",
	"author": "Lime Technologies",
	"homepage": "https://github.com/Lundalogik/lime-web-component-interfaces#readme",
	"keywords": [],
	"license": "ISC",
	"main": "index.js",
	"types": "index.d.ts",
	"scripts": {
		"build": "tsc && node build.js",
		"start": "npm run generate-api-docs && docz dev",
		"docz:build": "npm run generate-api-docs && docz build",
		"docz:serve": "serve .docz/dist --single",
		"docz:publish": "node publish-docs.js",
		"generate-api-docs": "npx typedoc && node transform-docs.js"
	},
	"devDependencies": {
		"@commitlint/cli": "^7.3.2",
		"@commitlint/config-conventional": "^7.3.1",
		"@semantic-release/changelog": "^3.0.2",
		"@semantic-release/exec": "^3.3.2",
		"@semantic-release/git": "^7.0.8",
		"commitizen": "^3.0.5",
		"cz-conventional-changelog": "^2.1.0",
		"docz": "^0.12.5",
		"replace-in-file": "^3.4.3",
		"semantic-release": "^15.13.3",
		"serve": "^10.1.1",
		"shelljs": "^0.8.3",
		"typedoc": "^0.14.2",
		"typedoc-plugin-markdown": "^1.1.27",
		"typescript": "^3.2.4"
	},
	"release": {
		"branch": "master",
		"plugins": [
			"@semantic-release/commit-analyzer",
			"@semantic-release/release-notes-generator",
			"@semantic-release/changelog",
			"@semantic-release/npm",
			"@semantic-release/git",
			"@semantic-release/github",
			[
				"@semantic-release/exec",
				{
					"publishCmd": "cd .. && npm run docz:publish -- --v=${nextRelease.version} --dryRun=${options.dryRun}"
				}
			]
		],
		"npmPublish": true
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Lundalogik/lime-web-component-interfaces.git"
	},
	"publishConfig": {
		"repository": "http://npm.lundalogik.com:4873"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"bugs": {
		"url": "https://github.com/Lundalogik/lime-web-component-interfaces/issues"
	}
}
