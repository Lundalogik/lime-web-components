{
    "name": "lime-web-component-interfaces",
    "version": "1.10.0",
    "description": "Lime web components",
    "author": "Lime Technologies",
    "homepage": "https://github.com/Lundalogik/lime-web-component-interfaces#readme",
    "keywords": [],
    "license": "ISC",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist/"
    ],
    "scripts": {
        "build": "tsc && node build.js",
        "start": "docz dev",
        "docz:build": "docz build",
        "docz:serve": "serve .docz/dist --single",
        "docz:ublish": "node publish-docs.js"
    },
    "devDependencies": {
        "@commitlint/cli": "^7.1.2",
        "@commitlint/config-conventional": "^7.1.2",
        "@semantic-release/changelog": "^3.0.0",
        "@semantic-release/exec": "^3.3.2",
        "@semantic-release/git": "^7.0.4",
        "commitizen": "^3.0.1",
        "cz-conventional-changelog": "^2.1.0",
        "docz": "^0.12.5",
        "replace-in-file": "^3.4.3",
        "semantic-release": "^15.9.16",
        "serve": "^10.0.2",
        "shelljs": "^0.8.3",
        "typescript": "^3.0.3"
    },
    "release": {
        "branch": "master",
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            "@semantic-release/changelog",
            "@semantic-release/npm",
            "@semantic-release/git",
            "@semantic-release/github",
            [
                "@semantic-release/exec",
                {
                    "publishCmd": "npm run docz:publish -- --v=${nextRelease.version} --dryRun=${options.dryRun}"
                }
            ]
        ],
        "npmPublish": true
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Lundalogik/lime-web-component-interfaces.git"
    },
    "publishConfig": {
        "repository": "http://npm.lundalogik.com:4873"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "bugs": {
        "url": "https://github.com/Lundalogik/lime-web-component-interfaces/issues"
    }
}
