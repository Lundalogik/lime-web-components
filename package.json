{
  "description": "Lime Web Components",
  "author": "Lime Technologies",
  "license": "Apache-2.0",
  "scripts": {
    "build": "lerna bootstrap && lerna run build",
    "start": "npm run generate-api-docs && docz dev",
    "docz:build": "lerna bootstrap && npm run generate-api-docs && docz build",
    "docz:publish": "node publish-docs.js",
    "generate-api-docs": "typedoc && node transform-docs.js",
    "lint": "npm run lint:src && npm run lint:config",
    "lint:fix": "npm run lint:src:fix && npm run lint:config:fix",
    "lint:config": "tslint --project . -t stylish -c tslint.config.js '*.{ts,tsx}' && eslint -c eslint.js '*.js' && prettier -l '{!(package*|lerna).json,.prettierrc}'",
    "lint:config:fix": "tslint -t stylish --fix -c tslint.config.js '*.{ts,tsx}' && eslint --fix -c eslint.js '*.js' && prettier --write '{!(package*|lerna).json,.prettierrc}'",
    "lint:src": "tslint --project . -t stylish -c tslint.js 'packages/**/src/**/*.{interface.ts,ts,tsx}'",
    "lint:src:fix": "tslint --project . -t stylish --fix -c tslint.js 'packages/**/src/**/*.{interface.ts,ts,tsx}'",
    "postpublish": "npm run docz:publish -- --v=current",
    "postpublish:dry-run": "npm run docz:publish -- --v=current --dryRun"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^9.1.1",
    "@stencil/core": "^1.16.2",
    "commitizen": "4.1.2",
    "cz-conventional-changelog": "3.2.0",
    "docz": "0.12.5",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "lerna": "^3.22.1",
    "prettier": "^2.0.5",
    "replace-in-file": "^6.1.0",
    "shelljs": "0.8.4",
    "tslint": "6.1.2",
    "tslint-config-prettier": "1.18.0",
    "tslint-eslint-rules": "5.4.0",
    "tslint-plugin-prettier": "2.3.0",
    "tslint-react": "5.0.0",
    "tslint-sonarts": "1.9.0",
    "typedoc": "0.17.7",
    "typedoc-plugin-markdown": "~2.3.0",
    "typescript": "^3.9.6"
  },
  "keywords": [
    "lime web components",
    "lime crm"
  ],
  "directories": {
    "doc": "doc"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Lundalogik/lime-web-components.git"
  }
}
