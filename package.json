{
    "private": true,
    "description": "Lime Web Components",
    "author": "Lime Technologies",
    "license": "ISC",
    "scripts": {
        "build": "lerna bootstrap && lerna run build",
        "start": "npm run generate-api-docs && docz dev",
        "docz:build": "npm run generate-api-docs && docz build",
        "docz:serve": "serve .docz/dist --single",
        "docz:publish": "node publish-docs.js",
        "generate-api-docs": "npx typedoc && node transform-docs.js"
    },
    "devDependencies": {
        "@commitlint/cli": "^7.5.2",
        "@commitlint/config-conventional": "^7.5.0",
        "@semantic-release/changelog": "^3.0.2",
        "@semantic-release/exec": "^3.3.2",
        "@semantic-release/git": "^7.0.8",
        "commitizen": "^3.0.7",
        "cz-conventional-changelog": "^2.1.0",
        "docz": "^0.12.5",
        "lerna": "^3.14.1",
        "replace-in-file": "^3.4.4",
        "semantic-release": "^15.13.12",
        "semantic-release-monorepo": "^6.1.1",
        "serve": "^10.1.2",
        "shelljs": "^0.8.3",
        "typedoc": "^0.14.2",
        "typedoc-plugin-markdown": "^1.1.27",
        "typescript": "^3.2.4"
    },
    "directories": {
        "doc": "doc"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
