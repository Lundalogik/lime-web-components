{
  "description": "Lime Web Components",
  "author": "Lime Technologies",
  "license": "Apache-2.0",
  "scripts": {
    "build": "lerna bootstrap && lerna run build",
    "start": "npm run generate-api-docs && docz dev",
    "docz:build": "lerna bootstrap && npm run generate-api-docs && docz build",
    "docz:publish": "node publish-docs.js",
    "generate-api-docs": "typedoc && node transform-docs.js",
    "lint": "npm run lint:src && npm run lint:root && npm run lint:json",
    "lint:fix": "npm run lint:src:fix && npm run lint:root:fix && npm run lint:json:fix",
    "lint:json": "prettier -l '{!(package-lock|lerna).json,packages/*/!(package-lock).json,.prettierrc}'",
    "lint:json:fix": "prettier --write '{!(package-lock|lerna).json,packages/*/!(package-lock).json,.prettierrc}'",
    "lint:root": "eslint --config .eslintrc.root.js './*.js' --max-warnings=0",
    "lint:root:fix": "eslint --config .eslintrc.root.js './*.js' --fix --max-warnings=0",
    "lint:src": "eslint --config .eslintrc.src.js 'packages/*/src/**/*.{ts,tsx}' --max-warnings=0",
    "lint:src:fix": "eslint --config .eslintrc.src.js 'packages/*/src/**/*.{ts,tsx}' --fix --max-warnings=0",
    "postpublish": "npm run docz:publish -- --v=current",
    "postpublish:dry-run": "npm run docz:publish -- --v=current --dryRun"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^9.1.1",
    "@stencil/core": "^1.16.2",
    "@stencil/eslint-plugin": "^0.3.1",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "commitizen": "4.1.2",
    "cz-conventional-changelog": "3.2.0",
    "docz": "0.12.5",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-jsdoc": "^29.2.0",
    "eslint-plugin-prefer-arrow": "^1.2.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-sonarjs": "^0.5.0",
    "lerna": "^3.22.1",
    "prettier": "^2.0.5",
    "replace-in-file": "^6.1.0",
    "shelljs": "0.8.4",
    "typedoc": "0.17.7",
    "typedoc-plugin-markdown": "~2.3.0",
    "typescript": "^3.9.6"
  },
  "keywords": ["lime web components", "lime crm"],
  "directories": {
    "doc": "doc"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Lundalogik/lime-web-components.git"
  }
}
